<main>
  <section>
    <div>
      <div></div>
      <div>
        <h1><%= @user.name %></h1>
        <p>Number of posts: <%= @user.posts_counter %></p>
      </div>
    </div>
    <div>
      <div>
        <h3>Bio:</h3>
        <p><%= @user.bio %></p>
      </div>
    </div>
  </section>
  <section>
    <ul>
      <% @user.recent_posts.each do |post| %>
        <%= link_to user_posts_path(@user) do %>
          <li>
            <h3><%= post.title%></h3>
            <h4><%= post.text%></h4>
            <div>
              <span>Comments: <%= post.comments_counter %></span>
              <span>Likes: <%= post.likes_counter %> </span>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
    <%= link_to "See all posts", user_posts_path(user_id: @user.id)%>
  </section> 
</main>
